{
  "name": "@ioxua/learn",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "npm run build:i18n && npm run build:css && remix vite:build",
    "build:i18n": "paraglide-js compile --project ./project.inlang --outdir ./app/i18n/paraglide",
    "build:css": "tailwindcss --minify -i ./app/styles/index.css -o ./app/styles.css",
    "build:cms": "tinacms dev",
    "dev": "conc -n remix,i18n,tailwind -c auto \"npm:dev:remix\" \"npm:dev:i18n\" \"npm:dev:css\"",
    "dev:remix": "remix vite:dev",
    "dev:css": "tailwindcss -w -i ./app/styles/index.css -o ./app/styles.css",
    "dev:i18n": "paraglide-js compile --project ./project.inlang --outdir ./app/i18n/paraglide --watch",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start:old": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "postinstall": "npm run build:i18n",
    "deploy": "wrangler pages deploy ./build/client",
    "dev:cloudflare": "echo 'see https://remix.run/docs/en/main/future/vite#cloudflare' && remix vite:build && wrangler pages dev ./build/client",
    "typegen": "wrangler types"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.1",
    "@kinde-oss/kinde-auth-remix-sdk": "^1.0.2-alpha.1",
    "@remix-run/cloudflare": "^2.7.2",
    "@remix-run/cloudflare-pages": "^2.7.2",
    "@remix-run/node": "^2.7.2",
    "@remix-run/react": "^2.7.2",
    "@remix-run/serve": "^2.7.2",
    "clsx": "^2.1.0",
    "concurrently": "^8.2.2",
    "framer-motion": "^11.0.6",
    "isbot": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hotkeys-hook": "^4.5.0",
    "tinacms": "^1.5.28"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240222.0",
    "@inlang/paraglide-js": "1.2.5",
    "@remix-run/dev": "^2.7.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tinacms/cli": "^1.5.39",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.35",
    "preline": "^2.0.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.1.6",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1",
    "wrangler": "^3.30.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
